<style>

  .td1{
      display: table-cell;
      vertical-align: inherit;
  }

  td.td1 {
      height: 200px;
      width: 48px;
  }

    #table-viewer {
        overflow-y: hidden;
        /*min-height: 1000px;*/
        width: 1000px;
    }

    #timetable div {
        float: left;
    }

    .employee_list {
        float: left;
        border-right: 1px solid #999999;
        min-height: 360px;
    }

    #table-days {
        width: 48px;
        min-height: 1000px;
    }



    #spl_timetable  {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
        overflow: scroll;
        /*table-layout: fixed;*/
    }

    #spl_timetable td, #spl_timetable th {
        border: 1px solid darkgrey;
        padding: 8px;
        white-space: nowrap;

    }

    #spl_timetable button{
        background-color: green;
        color: whitesmoke;
        height: 30px;
        border-radius: 30px;
        padding: 5px 5px 5px 4px;
        font-weight: bolder;
        width: 100%;
    }

    #spl_timetable b{
        text-align: center;
    }

    #spl_timetable tr:nth-child(even){background-color: #f2f2f2;}

    #spl_timetable tr:hover {background-color: #ddd;}

    #spl_timetable th {
        padding-top: 12px;
        padding-bottom: 12px;
        background-color: #4CAF50;
        color: white;
        text-align: center!important;
    }

  .vertical {
      -ms-transform: rotate(2700deg);
      -webkit-transform: rotate(270deg);
      transform: rotate(270deg);
      float: none !important;
      margin-left: 0px !important;
      width: 47px;
  }


</style>


<div id="content-header">
  <%= show_header_icon %>
  <h1><%= t('special_timetable_text') %></h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'><%= t('timetable_view') %></div>
  <div id="inner-tab-menu">
    <ul>
<!--      <li class="themed_bg themed-dark-hover-background"><%#= link_to "#{t('activities')}", :controller => 'student', :action => 'activities' ,:id => @student.id%></li>-->
    </ul>
  </div>
</div>
<div id="page-yield">
  <div class="bread_crumb">
    <%= make_breadcrumb %>
    <%= render_breadcrumbs  %>
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <!--  <h1><%#= @student.course.id %></h1>-->
  <div id="timetable">
    <div id="">
      <h3 align="center">Grade 3 - 6  </h3>
      <div id="table-viewer">
        <%= render :partial => 'indepth_timetable/spl_tt_3_6' %>
      </div>
      <br> <br>
      <h3 align="center">Grade 7 - 12 </h3>
      <div id="table-viewer">
          <%= render :partial => 'indepth_timetable/spl_tt_7_12' %>
      </div>
    </div>
  </div>




</div>
